  "Aura",
  "Bubbles",
  "Laersdok"
];

let npcGenIdResult = npcGenIdArr[Math.floor(Math.random() * npcGenIdArr.length)];

let npcAge = Math.floor(Math.random() * 100) + 1;

let npcPersonalityResult = npcPersonalityArr[Math.floor(Math.random() * npcPersonalityArr.length)];

let npcHobbyResult = npcHobbiesArr[Math.floor(Math.random() * npcHobbiesArr.length)] + ", " + npcHobbiesArr[Math.floor(Math.random() * npcHobbiesArr.length) + 2]; 

let npcNameResult = npcNameList[Math.floor(Math.random() * npcNameList.length)];
  
let generateNpcProfiles = function() {
  document.getElementById("generatedNpcResultsA").innerHTML = npcNameResult + "<br>" + npcAge + "<br>" + npcHobbyResult + "<br>" + npcPersonalityResult;
  document.getElementById("generatedNpcResultsB").innerHTML = npcNameResult + "<br>" + npcAge + "<br>" + npcHobbyResult + "<br>" + npcPersonalityResult;
  document.getElementById("generatedNpcResultsC").innerHTML = npcNameResult + "<br>" + npcAge + "<br>" + npcHobbyResult + "<br>" + npcPersonalityResult;
};

